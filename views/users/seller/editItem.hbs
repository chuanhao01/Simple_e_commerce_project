<main class="container-fluid">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <article class="mb-2">
                <h2 class="d-block">Editing a product</h3>
                <span class="d-block">Name: {{product.name}}</span>
                <span class="d-block">Price: {{product.price}}</span>
                <span class="d-block">Quantity: {{product.quantity}}</span>
            </article>
            <form action="/user/seller/products/edit/{{product.prod_id}}" method="POST">
                <h3>Change here</h2>
                <label for="form_name">Name</label>
                <input type="text" id="form_name" placeholder="Name of Product" class="form-control mb-3" name="name" value="{{product.name}}">
                <label for="form_price">Price</label>
                <input type="text" id="form_price" placeholder="Price of product" class="form-control mb-3" name="price" value="{{product.price}}">
                <label for="form_quantity">Quantity</label>
                <input type="number" id="form_quantity" placeholder="Quantity" class="form-control mb-3" name="quantity" value="{{product.quantity}}">
                <button type="submit" class="btn btn-primary">Edit the product</button>
            </form>
        </div>
        <div class="col-1"></div>
    </div>
</main>