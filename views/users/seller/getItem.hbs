<main class="container-fluid">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <div class="card bg-secondary text-white mb-3">
                <div class="card-body ">
                    <article class="mb-3">
                        <h3 class="card-title">
                            Product name: {{product.name}}
                        </h3>
                        <p class="card-text">
                            Price: {{product.price}}
                        </p>
                    </article>
                    <div>
                        <a href="/user/seller/products/edit/{{product.prod_id}}" class="btn btn-warning">Edit product</a>
                        <a href="" class="btn btn-danger">Delete product</a>
                    </div>
                </div>
            </div>
            <div>
                <a href="/user/" class="btn btn-primary mr-3">Go back to the dashboard</a>
                <a href="/user/seller/products/view/all" class="btn btn-info">Go back to see all of your products</a>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</main>